{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "useDefineForClassFields": true,
    "types": ["vite/client", "@webgpu/types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "vite.config.ts"]
}
